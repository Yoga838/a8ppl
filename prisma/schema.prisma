datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Visitor {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  alamat    String
  no        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mitra {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  no        String
  alamat    String
  usaha     String
  pribadi   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  aproval   aproval[]
  pegawai   pegawai[]
}
model pegawai {
  id        Int      @id @default(autoincrement())
  workAt    Int
  work      Mitra @relation(fields: [workAt], references: [id])
  name      String
  email     String   @unique
  password  String
  no        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model aproval {
  id    Int   @id @default(autoincrement())
  accid Int
  acc   Mitra @relation(fields: [accid], references: [id])
}
model Rejected {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    
  password  String
  createdAt DateTime  @default(now())
}



model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
