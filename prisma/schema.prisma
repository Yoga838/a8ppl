datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Visitor {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  alamat    String
  no        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mitra {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  no        String
  alamat    String
  usaha     String
  pribadi   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  aproval   aproval[]
  pegawai   pegawai[]
  pencatatan pencatatan[]
}
model pegawai {
  id        Int      @id @default(autoincrement())
  workAt    Int
  work      Mitra @relation(fields: [workAt], references: [id])
  name      String
  email     String   @unique
  password  String
  no        String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model aproval {
  id            Int   @id @default(autoincrement())
  accid         Int
  acc           Mitra @relation(fields: [accid], references: [id])
  diacc_oleh    Int
  admin         Admin @relation(fields: [diacc_oleh], references: [id])
}
model Rejected {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    
  password      String
  createdAt     DateTime  @default(now())
  rejected_oleh Int
  reject        Admin @relation(fields: [rejected_oleh], references: [id]) 

}



model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  deskripsi String? @default("Tem.U merupakan project adpl + ppl yang dikerjakan oleh kelompok a8 Teknologi Informasi")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  approval  aproval[]
  rejected  Rejected[]
}

model pencatatan {
  id          Int   @id @default(autoincrement())
  tanggal     DateTime
  keterangan  String
  pemasukan   Int
  pengeluaran Int
  saldo       Int
  milik       Int
  pemilik     Mitra @relation(fields: [milik], references: [id])
}
